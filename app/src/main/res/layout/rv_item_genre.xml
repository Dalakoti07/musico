<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_700"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">
<!--todo different colors for different card-->
    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/large_margin"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/large_margin"
        android:id="@+id/tv_genre_name"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size"
        android:text="Genere name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<!--    todo add a library of thousand icons for android -->

    <ImageView
        android:id="@+id/ic_genre"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="80dp"
        android:padding="4dp"
        android:layout_height="80dp"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_genre_name"
        android:layout_marginTop="@dimen/small_margin"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/small_margin"
        android:id="@+id/tv_count"
        app:layout_constraintLeft_toLeftOf="@id/tv_genre_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/smaller_text_size"
        android:textColor="@color/white"
        android:text="2304"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>